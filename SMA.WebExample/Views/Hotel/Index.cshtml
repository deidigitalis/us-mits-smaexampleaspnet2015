@model IEnumerable<SMA.WebExample.Models.Hotel>

@{
    ViewBag.Title = "Hotel List";
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-lg btn-primary" })
</p>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Panel title</h3>
    </div>
    <div class="panel-body">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HotelType)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HotelType)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.HotelId }, new { @class = "btn btn-lg btn-success" })
                        @Html.ActionLink("Details", "Details", new { id = item.HotelId }, new { @class = "btn btn-lg btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.HotelId }, new { @class = "btn btn-lg btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>